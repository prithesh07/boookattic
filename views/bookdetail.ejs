					<div style="float:right">
						<a style="text-decoration:none" href="/editBook?title=<%= name %>"><span style=" color:#FFFFFF;font-weight:bold;font-size: 40px;">	&#128393;</span></a>
					</div>
				</div>	
				<text id="txt" style="font-size: 100px">
				</text>
				<% Book.forEach(function(Book){ %>
				<% if(Book.title==name){%>				
				<div>
						   <div style="width:350px;Text-align:left;">
