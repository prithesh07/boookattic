							<span style="padding-left:50px;" class="fa fa-star checked"></span>
							<% var i= parseInt(Book.rating, 10),x=0;%>	
							<% while(i>1){ %>
							<span class="fa fa-star checked"></span>
							   <%i--;x++; } %>
							   <%var y=5-x; %>
